<main>
  <p id="notice"><%= flash[:notice] %></p>
    <div class='container px-5 px-sm-0'>
      <div class='row'>

        <%= render 'books/list', books: @books %>

        <div class='col-md-8 offset-md-1'>
          <h2>Users</h2>
          <table class='table'>
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
              <tbody>
                <% @users.each do |user| %>
                <tr>
                  <td>
                    <% if user.profile_image.attached? %>
                      <%= image_tag user.get_profile_image(100, 100), size: "100x100" %>
                    <% else %>
                      <%= image_tag 'default-image.jpg', size: "100x100" %>
                    <% end %>
                  </td>
                  <td><%= user.name %></td>
                  <td><%= link_to "Show", user_path(user) %></td>
                </tr>
                <% end %>
              </tbody>
            </tr>
          </thead>
          </table>
        </div>

      </div>
    </div>
</main>