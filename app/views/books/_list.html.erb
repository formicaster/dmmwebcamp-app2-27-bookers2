<div class='col-md-3'>
          <h2>User info</h2>
            <table class='table'>
              <% if @user.present? %>
              <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
              <tr>
	              <th>name</th>
	              <th><%= @user.name %></th>
              </tr>
              <% else %>
              <tr>
                <th>name</th>
                <th>User not found</th>
              </tr>
              <% end %>
              <tr>
	              <th>introduction</th>
	              <th></th>
              </tr>
            </table>
          <div class='row'>
            <a class="btn btn-outline-secondary btn-block edit_user_path(@user)" href="edit_user_path(@user)">
              <i class="fas fa-user-cog"></i>
            </a>
          </div>
          <h2 class="mt-3">New book</h2>
            <form action="/books" accept-charset="UTF-8" method="post">
                <div class="form-group">
                  <label for="book_title">Title</label>
                  <input class="form-control book_title" type="text" name="book[title]" id="book_title" />
                </div>
                <div class="form-group">
                  <label for="book_opinion">Opinion</label>
                  <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
                </div>
                <div class="form-group">
                  <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />
                </div>
            </form>
        </div>