<h1>投稿一覧New book</h1>

<% @books.each do |book| %>

<div class="container">
  <div class="row"> 
    <div class="col-lg-4" style="background-color: orange;">
      <h2>サイドバー</h2>
    </div>
    <div class="col-lg-8">
      <table class="table table-striped">
        <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(10,10) %></p>
        <p>Title</p>
        <span><%= book.title %></span>
        <p>Opinion</p>
        <span><%= book.body %></span>
      </table>
    </div>
  </div>
</div>

  <p>画像</p>
  <% if book.image.attached? %>
    <%= book_tag book.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
<% end %>