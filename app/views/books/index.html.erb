<div class='col-md-8 offset-md-1'>
<h2>Books</h2>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% @books.each do |book| %>

<div class="container">
  <div class="row">
    <div class="col-lg-4" style="background-color: orange;">
      <h2>サイドバー</h2>
    </div>
    <div class="col-lg-8">
      <table class="table table-striped">
        <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
        <p>Title</p>
        <span><%= book.title %></span>
        <p>Opinion</p>
        <span><%= book.body %></span>
      </table>
    </div>
  </div>
</div>

  <p>画像</p>
  <% if book.image.attached? %>
    <%= image_tag book.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>
<% end %>