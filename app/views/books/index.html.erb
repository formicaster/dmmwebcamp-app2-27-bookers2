<main>
  <p id="notice"><%= flash[:notice] %></p>
    <div class='container px-5 px-sm-0'>
      <div class='row'>

        <%= render 'books/list', books: @books %>

        <div class='col-md-8 offset-md-1'>
          <h2>Books</h2>
            <table class='table table-hover table-inverse'>
            <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
              <td>
                <% if book.user.profile_image.attached? %>
                  <%= image_tag book.user.get_profile_image(100, 100), size: "100x100" %>
                <% else %>
                  <%= image_tag 'default-image.jpg', size: "100x100" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book %></td>
              <td><%= book.body %></td>
              </tr>
              <% end %>
            </tbody>
            </table>
        </div>

      </div>
    </div>
</main>